CREATE TABLE users (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    email STRING,
    name STRING,
    password STRING,
    type STRING,
    organization STRING
);

-- possible roles
-- - admin
-- - user
-- - tech

CREATE TABLE organizations (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name STRING,
    email STRING,
    type STRING -- either customer or service
);

CREATE TABLE tickets (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    title STRING,
    description STRING,
    creator STRING, -- collect from user (name)
    organization STRING, -- collect from user
    priority STRING,
    status STRING,
    -- contact STRING, (get rid of contact)
    created DATETIME, -- collect on form submission
    updated DATETIME, -- collect on form update
);

